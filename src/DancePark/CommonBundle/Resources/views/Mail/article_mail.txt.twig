<p>Новая статья: <a href="{{ path('front') }}">{{ article.title }}</a></p>
{% if article.event %}
    для события: <a href="{{ path('event_view', {id: article.event.id}) }}">{{ article.event.name }}</a>
    {% if article.event.place %}
        <p>{{ article.event.place.address }}</p>
    {% endif %}
{% endif %}
{% if digest.hash %}
    <a href="{{ url('drop_user_digest', {hash: digest.hash}) }}">Отписаться</a>
{% endif %}