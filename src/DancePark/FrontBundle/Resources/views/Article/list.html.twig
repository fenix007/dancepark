{% extends 'CommonBundle:Default:layout.html.twig' %}

{% block style_container %}
    {{ parent() }}
    {% stylesheets
    '@FrontBundle/Resources/public/css/*'
    filter='cssrewrite'
    output='front.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body_container %}
    <div class="article-list">
        <div class="list">
            {% for article in list %}
                <div class="article">
                    <a href="{{ path('article_view', {article: article.id}) }}">{{ article.title }}</a>
                </div>
            {% endfor %}
        </div>
        <div class="pager">
            {% if is_prev == true%}
                <a href="{{ path('article_list', {page: page - 1}) }}">{{ 'label.prev_page'|trans }}</a>
            {% endif %}
            {% if is_next == true %}
                <a href="{{ path('article_list', {page: page + 1}) }}">{{ 'label.next_page'|trans }}</a>
            {% endif %}
        </div>
    </div>
{% endblock %}